<openerp>
<data>
<record id="stock_location_rent_detail_view_tree" model="ir.ui.view">
    <field name="name">stock.location.rent.detail.tree</field>
    <field name="model">stock.location_rent_detail</field>
    <field name="arch" type="xml">
        <tree>
            <field name="location_id" />
            <field name="account_id" />
            <field name="yearly_pricelist_id" />
            <field name="monthly_pricelist_id" />
            <field name="daily_pricelist_id" />
            <field name="yearly_price_unit" />
            <field name="monthly_price_unit" />
            <field name="daily_price_unit" />
            <field name="amount_before_tax" />
            <field name="amount_tax" />
            <field name="amount_after_tax" />
        </tree>
    </field>
</record>

<record id="stock_location_rent_detail_view_form" model="ir.ui.view">
    <field name="name">stock.location.rent.detail.form</field>
    <field name="model">stock.location_rent_detail</field>
    <field name="arch" type="xml">
        <form>
            <header>
            </header>
            <div
                class="oe_right oe_button_box"
                style="width: 300px;"
                name="buttons"
            >
            </div>
            <group name="group_1" colspan="4" col="2">
                <group name="group_1_1" colspan="1" col="2" string="Details">
                    <field name="location_id" />
                    <field name="account_id" />
                </group>
                <group name="group_1_2" string="Pricelists">
                    <field name="yearly_pricelist_id" />
                    <field name="monthly_pricelist_id" />
                    <field name="daily_pricelist_id" />
                </group>
                <group name="group_1_3" string="Periods">
                    <field name="yearly_period" />
                    <field name="monthly_period" />
                    <field name="daily_period" />
                </group>
                <group name="group_1_4" string="Prices">
                    <field name="tax_ids" widget="many2many_tags"/>
                    <field name="yearly_price_unit" />
                    <field name="monthly_price_unit" />
                    <field name="daily_price_unit" />
                </group>
            </group>
            <notebook colspan="4">
                <page name="page_detail" string="Payment Terms">
                    <group name="group_detail_1" colspan="4" col="2">
                        <field
                            name="detail_ids"
                            colspan="2"
                            nolabel="1"
                        />
                    </group>
                </page>
            </notebook>
            <group class="oe_subtotal_footer oe_right" colspan="2" name="footer">
                <field name="amount_before_tax" widget='monetary' options="{'currency_field': 'parent_id.currency_id'}"/>
                <field name="amount_tax" widget='monetary' options="{'currency_field': 'parent_id.currency_id'}"/>
                <field name="amount_after_tax" widget='monetary' options="{'currency_field': 'parent_id.currency_id'}"/>
            </group>
        </form>
    </field>
</record>
</data>
</openerp>
