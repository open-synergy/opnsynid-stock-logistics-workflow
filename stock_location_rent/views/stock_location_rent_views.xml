<openerp>
<data>
<record id="stock_location_rent_view_search" model="ir.ui.view">
    <field name="name">stock.location.rent.search</field>
    <field name="model">stock.location_rent</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="company_id" groups="base.group_multi_company" />
            <field name="type_id" />
            <field name="partner_id" />
            <field name="partner_contact_id" />
            <field name="partner_invoice_id" />
            <field name="user_id" />
            <field name="currency_id" />
            <group name="dom_state" string="State">
                <filter
                            name="dom_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                <filter
                            name="dom_confirm"
                            string="Waiting for Approval"
                            domain="[('state','=','confirm')]"
                        />
                <filter
                            name="dom_start"
                            string="Start"
                            domain="[('state','=','start')]"
                        />
                <filter
                            name="dom_finish"
                            string="Finish"
                            domain="[('state','=','finish')]"
                        />
                <filter
                            name="dom_cancel"
                            string="Cancel"
                            domain="[('state','=','cancel')]"
                        />
                <filter
                            name="dom_terminate"
                            string="Terminate"
                            domain="[('state','=','terminate')]"
                        />
                <filter
                            name="needs_review"
                            string="Needs my Review"
                            domain="[('reviewer_ids','in',uid), ('state', 'not in', ['done', 'cancel', 'terminate'])]"
                        />
            </group>
            <group name="group" string="Group By">
                <filter
                            name="grp_company"
                            string="Company"
                            context="{'group_by':'company_id'}"
                            groups="base.group_multi_company"
                        />
                <filter
                            name="grp_type"
                            string="Types"
                            context="{'group_by':'type_id'}"
                        />
                <filter
                            name="grp_partner"
                            string="Partners"
                            context="{'group_by':'partner_id'}"
                        />
                <filter
                            name="grp_partner_contact"
                            string="Contacts"
                            context="{'group_by':'partner_contact_id'}"
                        />
                <filter
                            name="grp_partner_invoice"
                            string="Invoice Addresses"
                            context="{'group_by':'partner_invoice_id'}"
                        />
                <filter
                            name="grp_user"
                            string="Sales Person"
                            context="{'group_by':'user_id'}"
                        />
                <filter
                            name="grp_currency"
                            string="Currencies"
                            context="{'group_by':'currency_id'}"
                        />
                <filter
                            name="grp_date_start_year"
                            string="Date Start by Year"
                            context="{'group_by':'date_start:year'}"
                        />
                <filter
                            name="grp_date_start_month"
                            string="Date Start by Month"
                            context="{'group_by':'date_start:month'}"
                        />
                <filter
                            name="grp_date_start_week"
                            string="Date Start by Week"
                            context="{'group_by':'date_start:week'}"
                        />
                <filter
                            name="grp_date_start_day"
                            string="Date Start by Day"
                            context="{'group_by':'date_start:day'}"
                        />
                <filter
                            name="grp_date_end_year"
                            string="Date End by Year"
                            context="{'group_by':'date_end:year'}"
                        />
                <filter
                            name="grp_date_end_month"
                            string="Date End by Month"
                            context="{'group_by':'date_end:month'}"
                        />
                <filter
                            name="grp_date_end_week"
                            string="Date End by Week"
                            context="{'group_by':'date_end:week'}"
                        />
                <filter
                            name="grp_date_end_day"
                            string="Date End by Day"
                            context="{'group_by':'date_end:day'}"
                        />
            </group>
        </search>
    </field>
</record>

<record id="stock_location_rent_view_tree" model="ir.ui.view">
    <field name="name">stock.location.rent.tree</field>
    <field name="model">stock.location_rent</field>
    <field name="arch" type="xml">
        <tree>
            <field name="id" />
            <field name="name" />
            <field name="company_id" groups="base.group_multi_company" />
            <field name="partner_id" />
            <field name="partner_contact_id" />
            <field name="partner_invoice_id" />
            <field name="type_id" />
            <field name="currency_id" />
            <field name="user_id" />
            <field name="date_start" />
            <field name="date_end" />
            <field name="amount_before_tax" string="Untaxed" sum="Total Untaxed"/>
            <field name="amount_tax" string="Tax" sum="Total Tax"/>
            <field name="amount_after_tax" string="Total" sum="Total"/>
            <field name="state" />
        </tree>
    </field>
</record>

<record id="stock_location_rent_view_form" model="ir.ui.view">
    <field name="name">stock.location.rent.form</field>
    <field name="model">stock.location_rent</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            confirm="Confirm data. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}"
                        />
                <button
                            name="action_finish"
                            type="object"
                            string="Finish"
                            class="oe_highlight"
                            confirm="Finish data. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','start'),('confirm_ok','=',False)]}"
                        />
                <button
                            name="request_validation"
                            string="Request Validation"
                            attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                            class="oe_highlight"
                            type="object"
                        />
                <button
                            name="restart_validation"
                            string="Restart Validation"
                            attrs="{'invisible': ['|','|','|',('review_ids', '=', []),('rejected','=',False),('state','not in',['confirm']),('restart_validation_ok','=',False)]}"
                            type="object"
                        />
                <button
                            name="%(base_print_policy.base_print_document_action)d"
                            string="Print"
                            type="action"
                            icon="gtk-print"
                        />
                <button
                            name="%(base_cancel_reason.base_cancel_reason_wizard_action)d"
                            type="action"
                            string="Cancel"
                            attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}"
                            confirm="Cancel data. Are you sure?"
                        />
                <button
                            name="%(base_terminate_reason.base_terminate_reason_wizard_action)d"
                            type="action"
                            string="Terminate"
                            attrs="{'invisible':['|',('state','!=','start'),('terminate_ok','=',False)]}"
                            confirm="Terminate data. Are you sure?"
                        />
                <button
                            name="action_restart"
                            type="object"
                            string="Restart"
                            confirm="Restart data. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}"
                        />
                <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,approve"
                        />
            </header>
            <field name="need_validation" invisible="1" />
            <field name="validated" invisible="1" />
            <field name="rejected" invisible="1" />
            <div
                        class="alert alert-warning"
                        attrs="{'invisible': ['|', '|', '|',
                 ('validated', '=', True), ('state', 'not in', ['confirm']),
                 ('rejected', '=', True), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                <p><i class="fa fa-info-circle" />This Data needs to be
                    validated.
                    <button
                                name="validate_tier"
                                string="Validate"
                                attrs="{'invisible': [('review_ids', '=', [])]}"
                                type="object"
                                class="oe_inline oe_button btn-success"
                                icon="terp-check"
                            />
                    <button
                                name="reject_tier"
                                string="Reject"
                                type="object"
                                class="btn-icon btn-danger"
                                icon="terp-gtk-stop"
                            />
                </p>
            </div>
            <div
                        class="alert alert-success"
                        attrs="{'invisible': ['|', '|', ('validated', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                <p><i class="fa fa-thumbs-up" /> Operation has been <b
                            >validated</b>!</p>
            </div>
            <div
                        class="alert alert-danger"
                        attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                <p><i class="fa fa-thumbs-down" /> Operation has been <b
                            >rejected</b>.</p>
            </div>
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name" />
                        <h1>
                            <field name="name" class="oe_edit_only" />
                            <field name="display_name" class="oe_read_only" />
                        </h1>
                        <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <label
                                        for="cancel_reason_id"
                                        string="Cancellation reason:"
                                    />
                            <field name="cancel_reason_id" class="oe_inline" />
                        </h2>
                        <h2 attrs="{'invisible': [('state', '!=', 'terminate')]}">
                            <label
                                        for="terminate_reason_id"
                                        string="Termination reason:"
                                    />
                            <field name="terminate_reason_id" class="oe_inline" />
                        </h2>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="type_id" />
                        <field name="user_id" />
                        <field name="currency_id" />
                    </group>
                    <group name="group_1_2">
                        <field name="partner_id" />
                        <field
                                    name="allowed_partner_contact_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                        <field
                                    name="partner_contact_id"
                                    domain="[('id','in',allowed_partner_contact_ids[0][2])]"
                                />
                        <field
                                    name="partner_invoice_id"
                                    domain="[('id','in',allowed_partner_contact_ids[0][2])]"
                                />
                    </group>
                    <group name="group_1_3" string="Periods">
                        <field name="date_start" />
                        <field name="date_end" />
                        <field name="yearly_period" />
                        <field name="monthly_period" />
                        <field name="daily_period" />
                        <field
                            name="allowed_payment_term_period_id"
                            widget="many2many_tags"
                            invisible="1"
                        />
                        <field
                            name="payment_term_period_id"
                            domain="[('id','in',allowed_payment_term_period_id[0][2])]"
                        />
                        <field name="payment_term_period_number" />
                    </group>
                    <group name="group_1_4" string="Invoices">
                        <field name="pricelist_id" />
                        <field name="payment_term_id" />
                        <field name="invoice_method" />
                        <field name="date_invoice_offset" />
                        <field name="invoice_number" />
                    </group>
                </group>
                <notebook colspan="4">
                    <page name="page_detail" string="Details">
                        <group name="group_detail_1" colspan="4" col="2">
                            <button
                                name="action_create_payment_schedule"
                                type="object"
                                string="Create Payment Schedule"
                                icon="gtk-execute"
                                colspan="2"
                                attrs="{'invisible':[('state','!=','draft')]}"
                            />
                            <field
                                name="detail_ids"
                                colspan="2"
                                nolabel="1"
                            />
                        </group>
                    </page>
                    <page name="page_payment_terms" string="Payment Terms">
                        <group name="group_payment_terms_1" colspan="4" col="2">
                            <field
                                name="payment_term_ids"
                                colspan="2"
                                nolabel="1"
                            >
                            <tree>
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="invoice_id" />
                                <field name="date_invoice" />
                                <field name="date_due" />
                                <field name="state" />
                                <button
                                              name="action_create_invoice"
                                              string="Create Invoice"
                                              type="object"
                                              icon="gtk-execute"
                                              states="uninvoiced"
                                          />
                                <button
                                              name="action_delete_invoice"
                                              string="Delete Invoice"
                                              type="object"
                                              icon="gtk-cancel"
                                              states="invoiced"
                                          />
                            </tree>
                            </field>
                        </group>
                    </page>
                    <page name="page_accounting" string="Accountings">
                        <group name="group_accounting_1" colspan="4" col="2">
                            <field
                                        name="allowed_receivable_journal_ids"
                                        widget="many2many_tags"
                                        invisible="1"
                                    />
                            <field
                                        name="allowed_receivable_account_ids"
                                        widget="many2many_tags"
                                        invisible="1"
                                    />
                            <field
                                        name="receivable_account_id"
                                        domain="[('id','in',allowed_receivable_account_ids[0][2])]"
                                    />
                            <field
                                        name="receivable_journal_id"
                                        domain="[('id','in',allowed_receivable_journal_ids[0][2])]"
                                    />
                        </group>
                    </page>
                    <page string="Reviews" name="tier_validation">
                        <group name="tier_validation_1" colspan="4" col="2">
                            <field name="definition_id" />
                            <field
                                        name="reviewer_partner_ids"
                                        widget="many2many_tags"
                                    />
                        </group>
                        <group name="tier_validation_2" colspan="4" col="2">
                            <field name="review_ids" readonly="1" />
                        </group>
                    </page>
                    <page name="note" string="Notes">
                        <field name="note" />
                    </page>
                    <page name="policy" string="Policies" groups="base.group_system">
                        <group name="policy_1" colspan="4" col="2">
                            <field name="confirm_ok" />
                            <field name="finish_ok" />
                            <field name="restart_validation_ok" />
                            <field name="cancel_ok" />
                            <field name="restart_ok" />
                            <field name="terminate_ok" />

                        </group>
                    </page>
                    <page name="log" string="Logs">
                        <group name="group_5" colspan="4" col="3">
                            <group name="group_log_1" colspan="4" col="3">
                                <field name="confirm_date" string="Confirmation" />
                                <field name="confirm_user_id" nolabel="1" />
                                <field name="start_date" string="Start" />
                                <field name="start_user_id" nolabel="1" />
                                <field name="finish_date" string="Finish" />
                                <field name="finish_user_id" nolabel="1" />
                                <field name="cancel_date" string="Cancellation" />
                                <field name="cancel_user_id" nolabel="1" />
                                <field name="terminate_date" string="Termination" />
                                <field name="terminate_user_id" nolabel="1" />
                            </group>
                        </group>
                    </page>
                </notebook>
                <group class="oe_subtotal_footer oe_right" colspan="2" name="footer_amount_invoice">
                    <field name="amount_invoice_before_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_invoice_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_invoice_after_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </group>
                <group class="oe_subtotal_footer oe_left" colspan="2" name="footer_amount">
                    <field name="amount_before_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_after_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field
                            name="message_follower_ids"
                            widget="mail_followers"
                            groups="base.group_user"
                        />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </form>
    </field>
</record>

<record id="stock_location_rent_action" model="ir.actions.act_window">
    <field name="name">Location Rent</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">stock.location_rent</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
</record>

<menuitem
            id="stock_location_rent_menu"
            name="Location Rent"
            parent="stock_location_rent_root_menu"
            action="stock_location_rent_action"
            sequence="1"
        />
</data>
</openerp>
