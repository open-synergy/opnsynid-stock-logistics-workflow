<openerp>
<data>
<record id="stock_location_rent_payment_term_period_view_search" model="ir.ui.view">
    <field name="name">stock.location.rent.payment.term.period.search</field>
    <field name="model">stock.location_rent_payment_term_period</field>
    <field name="arch" type="xml">
        <search>
            <field name="code" />
            <field name="name" />
        </search>
    </field>
</record>

<record id="stock_location_rent_payment_term_period_view_tree" model="ir.ui.view">
    <field name="name">stock.location.rent.payment.term.period.tree</field>
    <field name="model">stock.location_rent_payment_term_period</field>
    <field name="arch" type="xml">
        <tree>
            <field name="code" />
            <field name="name" />
        </tree>
    </field>
</record>

<record id="stock_location_rent_payment_term_period_view_form" model="ir.ui.view">
    <field name="name">stock.location.rent.payment.term.period.form</field>
    <field name="model">stock.location_rent_payment_term_period</field>
    <field name="arch" type="xml">
        <form>
            <header />
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        />
                <group name="group_1" colspan="4" col="2">
                    <field name="code" />
                    <field name="name" />
                    <field name="type" />
                    <field name="payment_term_period_number" />
                    <field name="allowed_pricelist_ids" widget="many2many_tags" />
                    <field name="active" />
                </group>
                <notebook>
                    <page name="note" string="Note">
                        <field name="note" />
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record
            id="stock_location_rent_payment_term_period_action"
            model="ir.actions.act_window"
        >
    <field name="name">Location Rent Payment Term Period</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">stock.location_rent_payment_term_period</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
            id="stock_location_rent_payment_term_period_menu"
            name="Location Rent Payment Term Period"
            parent="stock_location_rent_config_menu"
            action="stock_location_rent_payment_term_period_action"
            sequence="11"
        />
</data>
</openerp>
